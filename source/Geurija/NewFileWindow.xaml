<Window x:Class="Geurija.NewFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geurija"
        mc:Ignorable="d"
        Title="New File" Height="300" Width="300" WindowStyle="ThreeDBorderWindow">
	<Grid>
		<StackPanel Margin="10">
			<StackPanel Orientation="Horizontal">
				<TextBlock x:Name="nameTextBlock" Width="80" VerticalAlignment="Center" Text="Name"/>
				<TextBox x:Name="nameTextBox" Width="180" VerticalAlignment="Center"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
				<TextBlock x:Name="widthTextBlock" Width="80" VerticalAlignment="Center" Text="Width"/>
				<TextBox x:Name="widthTextBox" Width="80" VerticalAlignment="Center"/>
				<ComboBox x:Name="widthComboBox" Width="90" Margin="10,0,0,0"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
				<TextBlock x:Name="heightTextBlock" Width="80" VerticalAlignment="Center" Text="Height"/>
				<TextBox x:Name="heightTextBox" Width="80" VerticalAlignment="Center"/>
				<ComboBox x:Name="heightComboBox" Width="90" Margin="10,0,0,0"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
