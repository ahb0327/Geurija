<Window x:Class="Geurija.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geurija"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closed="OnClosed" Background="Gray">
    <Grid>
		<Menu VerticalAlignment="Top">
			<MenuItem x:Name="file" Header="_File">
				<MenuItem x:Name="newFile" Header="_New File" Click="NewFile_Click"/>
				<MenuItem x:Name="open" Header="_Open" Click="Open_Click"/>
				<MenuItem x:Name="save" Header="_Save" Click="Save_Click"/>
			</MenuItem>
		</Menu>
    </Grid>
</Window>
