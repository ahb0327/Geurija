<Window x:Class="Geurija.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geurija"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closed="OnClosed" Background="Gray">
    <Grid>
		<Menu VerticalAlignment="Top">
			<MenuItem x:Name="File" Header="_File">
				<MenuItem x:Name="NewFile" Header="_New File" Checked="NewFile_Checked"/>
				<MenuItem x:Name="Open" Header="_Open" Checked="Open_Checked"/>
				<MenuItem x:Name="Save" Header="_Save" Checked="Save_Checked"/>
			</MenuItem>
		</Menu>
    </Grid>
</Window>
